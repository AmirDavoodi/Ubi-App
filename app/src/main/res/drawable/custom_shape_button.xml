<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="300dp"
                android:height="80dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:right="80dp">
        <shape android:shape="rectangle">
            <size
                android:width="300dp"
                android:height="60dp" />
            <solid android:color="@color/darkblue1" />
        </shape>
    </item>

    <item
        android:left="135dp">
        <rotate android:fromDegrees="67">
            <shape android:shape="rectangle">
                <solid android:color="@color/darkblue1" />
            </shape>
        </rotate>
    </item>

    <!-- Top Border -->
    <item
        android:right="61dp"
        android:bottom="78.8dp">
        <shape android:shape="line">
            <stroke
                android:color="#999999"
                android:width="1dp" />
        </shape>
    </item>

    <!-- Right-Diagonal Border -->
    <item
        android:left="220dp">
        <rotate android:fromDegrees="67">
            <shape android:shape="line">
                <stroke
                    android:color="#999999"
                    android:width="1dp" />
            </shape>
        </rotate>
    </item>

</layer-list>