                    android:layout_height="wrap_content"
                    android:text="View 2"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/tv_name" />


                <com.warkiz.widget.IndicatorSeekBar
