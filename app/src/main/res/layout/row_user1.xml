                    android:layout_height="wrap_content"
                    android:background="@color/palegreen"
                    app:isb_indicator_color="@color/red"
                    app:isb_indicator_text_size="10sp"
                    app:isb_max="100"
                    app:isb_min="0"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="rounded_rectangle"
                    app:isb_thumb_color="@color/purple"
                    app:isb_tick_texts_color="@color/blue"
                    app:isb_track_background_color="@color/light_gray"
                    app:isb_track_progress_color="@color/dark_gray_s"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/tv_device" />

